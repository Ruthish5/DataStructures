#include <stdio.h>

void printOddAndEven(int arr[], int size) {
	printf("name : P.Ruthish\nregno : 192224283");
	
    printf("\nOdd values in the array: ");
    for (int i = 0; i < size; i++) {
        if (arr[i] % 2 != 0) {
            printf("\n%d ", arr[i]);
        }
    }
    printf("\n");

    printf("\nEven values in the array: ");
    for (int i = 0; i < size; i++) {
        if (arr[i] % 2 == 0) {
            printf("\n%d ", arr[i]);
        }
    }
    printf("\n");
}

int main() {
    int size;

    printf("\nEnter the size of the array: ");
    scanf("%d", &size);

    int arr[size];

    printf("\nEnter the elements of the array:\n");
    for (int i = 0; i < size; i++) {
        scanf("%d", &arr[i]);
    }

    printOddAndEven(arr, size);

    return 0;
}
